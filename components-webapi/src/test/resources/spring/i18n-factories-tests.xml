<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="ch.alv.components.web.i18n"/>

    <bean class="ch.alv.components.web.i18n.RequestAwareTranslatedTextFactory">
        <constructor-arg index="0" ref="contextProvider" />
    </bean>

    <bean id="contextProvider" class="ch.alv.components.core.spring.internal.DefaultApplicationContextProvider" />
    <bean class="ch.alv.components.core.spring.internal.DefaultApplicationContextProvider" />

    <bean class="ch.alv.components.web.context.internal.DefaultServletRequestProvider" />

    <bean class="org.springframework.mock.web.MockHttpServletRequest" />

    <context:annotation-config />

</beans>


