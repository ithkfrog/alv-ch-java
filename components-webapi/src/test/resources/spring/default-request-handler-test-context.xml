<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="mapper" class="ch.alv.components.core.beans.mapper.DozerBeanMapper"/>

    <bean id="getHandler" class="ch.alv.components.web.api.handler.DefaultGetRequestHandler"/>
    <bean id="postHandler" class="ch.alv.components.web.api.handler.DefaultPostRequestHandler"/>
    <bean id="putHandler" class="ch.alv.components.web.api.handler.DefaultPutRequestHandler"/>
    <bean id="deleteHandler" class="ch.alv.components.web.api.handler.DefaultDeleteRequestHandler"/>

    <bean id="service" class="ch.alv.components.web.api.mock.MockPagingDataService"/>

    <context:annotation-config/>

</beans>


