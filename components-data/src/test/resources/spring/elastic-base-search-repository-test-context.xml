<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:elasticsearch="http://www.springframework.org/schema/data/elasticsearch"
       xsi:schemaLocation="http://www.springframework.org/schema/data/elasticsearch http://www.springframework.org/schema/data/elasticsearch/spring-elasticsearch.xsd
                           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean class="ch.alv.components.core.spring.internal.DefaultApplicationContextProvider"/>

    <bean class="ch.alv.components.core.search.internal.DefaultQueryFactory">
        <constructor-arg index="0" ref="ch.alv.components.core.spring.internal.DefaultApplicationContextProvider" />
    </bean>

    <bean class="ch.alv.components.data.mock.search.TestBaseSearchRepositorySearch"/>
    <bean class="ch.alv.components.data.mock.search.TestBaseSearchRepositoryNonStringSearch"/>
    <bean class="ch.alv.components.data.mock.search.TestBaseSearchRepositoryNullSearch"/>

    <!-- use a sandbox node -->
     <elasticsearch:node-client id="client" local="true"/>

    <bean name="elasticsearchTemplate" class="org.springframework.data.elasticsearch.core.ElasticsearchTemplate">
        <constructor-arg name="client" ref="client"/>
    </bean>

    <elasticsearch:repositories base-package="ch.alv.components.data.elastic" />

</beans>