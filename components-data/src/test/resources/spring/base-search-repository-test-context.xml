<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="ch.alv.components.core.spring.internal.DefaultApplicationContextProvider"/>

    <bean class="ch.alv.components.data.mock.search.TestBaseSearchRepositorySearch"/>
    <bean class="ch.alv.components.data.mock.search.TestBaseSearchRepositoryNonStringSearch"/>
    <bean class="ch.alv.components.data.mock.search.TestBaseSearchRepositoryNullSearch"/>

    <bean id="queryFactory" class="ch.alv.components.core.search.internal.DefaultQueryFactory">
        <constructor-arg index="0" ref="ch.alv.components.core.spring.internal.DefaultApplicationContextProvider" />
    </bean>

    <bean class="ch.alv.components.data.mock.MockSearchRepository">
        <constructor-arg index="0" ref="queryFactory" />
    </bean>

</beans>